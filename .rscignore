# --- Répertoires de contrôle de version / CI ---
^\.git/
^\.github/

# --- renv : garder renv/activate.R & renv.lock, exclure le reste lourd ---
^renv/library/
^renv/cache/
^renv/staging/
^renv/python/

# --- Données brutes non utilisées directement par l'app ---
^data_ori/
^data/rasters/

# --- Formats SIG lourds/intermédiaires (non utilisés par l'app) ---
.*\.tif$
.*\.gpkg$
.*\.shp$
.*\.dbf$
.*\.shx$
.*\.prj$
.*\.sbn$
.*\.sbx$
.*\.xml$
.*\.qgz$
.*\.qgs$

# --- Fichiers temporaires / verrous ---
.*\.lock$

# --- Dossiers et fichiers de test / docs ---
^tests/
^docs/
^README.*$
^LICENSE.*$

# --- Fichiers RStudio / temporaires ---
^\.Rproj\.user/
.*\.Rproj$
^\.Rhistory$
^\.RData$

# --- Autres caches / archives éventuels ---
^\.cache/
^tmp/
^temp/
.*\.zip$
.*\.tar$
.*\.tar\.gz$
.*\.7z$
.*\.bak$
